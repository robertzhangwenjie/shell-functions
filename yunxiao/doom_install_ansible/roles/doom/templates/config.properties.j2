license= "{{ license }}"
doom.tddl.nodeName = doom-server-1
doom.current.env = 1
doom.domain.url = {{ doom_url }}

{% for host in groups['mysql'] %}
pri.db.url       = jdbc:mysql://{{ hostvars[host].inventory_hostname }}:3306/doom??characterEncoding=utf-8
{% endfor %}

pri.db.username  = {{ mysql_username }}
pri.db.password  = {{ mysql_password }}


{% for host in groups['solr'] %}
doom.solr.url      = http://{{  hostvars[host].inventory_hostname  }}:8983/solr/success_case
{% endfor %}


{% for host in groups['redis'] %}
redis.host          = {{  hostvars[host].inventory_hostname }}
{% endfor %}

redis.port          = {{ redis_port }}
redis.password      = {{ redis_passowrd }}
