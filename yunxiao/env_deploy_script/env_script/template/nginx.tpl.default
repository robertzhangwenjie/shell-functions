server {
  server_name ${ENV_TYPE,,}.${APP_NAME}.${COMPANY:-com};
  listen ${PORT};

  access_log ${HOME}/access_${APP_LOG} main;
  error_log ${HOME}/error_${APP_LOG};

  location / {
    root ${HOME}/${APP_NAME};
  }

  location ~ .*\.(js|css|ico|png|jpg|eot|svg|ttf|woff|html) {
    root ${HOME}/${APP_NAME};
  }
}